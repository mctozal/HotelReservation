@model IEnumerable<hotel_reservation.Models.EntityFramework.reservation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="box">
    <p>
        @Html.ActionLink("Create New", "Create")
    <a>||</a>
