@model IEnumerable<hotel_reservation.Models.EntityFramework.CreditCard>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="box">

    
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CardType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CardNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpMonth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpMonth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CreditCardID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CreditCardID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CreditCardID })
                    </td>
                </tr>
            }

        </table>

     </div>
